<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".JoinActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@drawable/tabbar_baground"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/signup_toolbar"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원 가입"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        />

        <Button
            android:layout_marginBottom="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/signup_signup_button"
            android:layout_width="262dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/color_violet"
            android:background="@drawable/auth_phone_button"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/nanumsquareotfregular"
            android:text="다음" />

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="96dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/signup_first">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계정 생성"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/nanumsquareotfbold"
                />

            <TextView
                android:layout_marginTop="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:fontFamily="@font/nanumsquareotfregular"
                android:text="아이디"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_ownerid"
                android:textColorHint="@color/color_bolder"
                android:hint="4~20자의 아이디를 입력하세요."
                android:fontFamily="@font/nanumsquareotfregular"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/input"
                android:singleLine="true"
                android:paddingTop="1dp"
                />
            <TextView
                android:id="@+id/signup_iderror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareotfregular"
                android:textColor="#E60012"/>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="비밀번호"
                android:fontFamily="@font/nanumsquareotfregular"
                android:textColor="#555555"
                />
        <EditText
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_ownerpassword"
            android:hint="영문,숫자 8~20자를 입력하세요."
            android:textSize="16sp"
            android:textColorHint="@color/color_bolder"
            android:inputType="textPassword"
            android:fontFamily="@font/nanumsquareotfregular"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/input"
            android:singleLine="true"
            android:paddingTop="1dp"
            />
            <TextView
                android:id="@+id/signup_passworderror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareotfregular"
                android:textColor="#E60012"/>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="비밀번호 확인"
                android:fontFamily="@font/nanumsquareotfregular"
                android:textColor="#555555"
                />

            <EditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_ownerpassword_repeat"
                android:textColorHint="@color/color_bolder"
                android:inputType="textPassword"
                android:fontFamily="@font/nanumsquareotfregular"
                android:hint="비밀번호를 다시 한번 입력하세요."
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/input"
                android:singleLine="true"
                android:paddingTop="1dp"
               />
            <TextView
                android:id="@+id/signup_passwordoverlaperror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquareotfregular"
                android:textColor="#E60012"/>
        </LinearLayout>

    </RelativeLayout>



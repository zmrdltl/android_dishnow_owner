<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration_RestaurantActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@drawable/tabbar_baground"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/res_info_toolbar"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="매장 등록"
            android:textSize="18sp"
            android:fontFamily="@font/nanumsquareotfregular"
            android:textColor="#FFFFFF"
            />
        </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/res_info_register"
            android:layout_width="262dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#FFFFFF"
            android:background="@drawable/next_button"
            android:text="등록하기" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="95dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/signup2_first">
        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식점 정보"
            android:textSize="16sp"
            android:fontFamily="@font/nanumsquareotfbold"
            android:textColor="#000000"
            android:id="@+id/txt_res_info"
            android:layout_marginBottom="43dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquareotfregular"
            android:textColor="#555555"
            android:text="음식점 이름"/>
        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/res_info_res_name"
            android:hint="음식점 이름을 입력하세요."
            android:textColorHint="@color/color_bolder"
            android:fontFamily="@font/nanumsquareotfregular"
            android:textSize="16sp"
            android:layout_marginBottom="27dp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/input"
            android:singleLine="true"
            android:paddingTop="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="음식점 전화번호"
            android:fontFamily="@font/nanumsquareotfregular"
            android:textColor="#555555"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/res_info_resphone"
                android:fontFamily="@font/nanumsquareotfregular"
                android:hint="음식점 대표 전화번호를 입력하세요."
                android:textColorHint="@color/color_bolder"
                android:textSize="16sp"
                android:layout_marginBottom="27dp"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/input"
                android:singleLine="true"
                android:paddingTop="1dp"
                />

        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:text="음식점 주소"/>
              <LinearLayout
                  android:layout_marginTop="9dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/res_info_address_num_edt"
                android:fontFamily="@font/nanumsquareotfregular"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColorHint="@color/color_bolder"
                android:paddingTop="1dp"
                android:hint="우편번호"/>
            <Button
                android:layout_marginLeft="5dp"
                android:layout_width="101dp"
                android:fontFamily="@font/nanumsquareotfregular"
                android:layout_height="36dp"
                android:id="@+id/res_info_search_address_btn"
                android:text="주소검색"
                android:layout_gravity="center"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="14dp"
                android:textColor="@color/color_violet"
                android:background="@drawable/auth_phone_button"
                />
            </LinearLayout>
            <EditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareotfregular"
                android:id="@+id/res_info_address_edt"
                android:textSize="16sp"
                android:textColorHint="@color/color_bolder"
                android:paddingTop="1dp"
                android:hint="주소"/>
            <EditText
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/nanumsquareotfregular"
                android:layout_height="wrap_content"
                android:id="@+id/res_info_detail_address_edt"
                android:textSize="14sp"
                android:textColorHint="@color/color_bolder"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/input"
                android:singleLine="true"
                android:paddingTop="1dp"
                android:hint="상세주소"/>
        </LinearLayout>
</RelativeLayout>